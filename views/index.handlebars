<div class="ui grid">
    <div class="sixteen wide column center aligned">
        <h1>Burgers</h1>
    </div>
</div>

<div class="ui grid container stackable">
    <div class="eight wide column">
        <ul class="ui center aligned segment" style="list-style-type:none;">
            {{#each burger}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="eight wide column">
        <ul class="ui center aligned segment" style="list-style-type:none;">
            {{#each burger}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="ui grid centered container">
    <div class="ui segment eight wide column center aligned">
        <h2>Add a Burger</h2>
        <form class="create-form">
        
            <div class="form-group ui input">
                <input placeholder="Burger Name" type="text" id="name" name="name">
            </div>
        
            <button class="ui primary button" type="submit">Add Burger</button>
        </form>
    </div>
</div>